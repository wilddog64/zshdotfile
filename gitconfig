[alias]
    timeline                   = log --date relative --pretty='%Cgreen %h %an %ai %s' --graph
    st                         = status
    rebase-abort               = rebase --abort
    co                         = checkout
    diffc                      = diff --cached
    pushu                      = push
    merge-with-no-commit-no-ff = merge --no-commit --no-ff
    cob                        = checkout -b
    aliases                    = config --get-regexp ^alias\\.*$
    pullrb                     = pull
    diff-b                     = diff
    outfiles                   = "!f() { git diff --name-status ..$1;  }; f"
    tip                        = log --date relative --pretty='%Cgreen %h %an %ai %s' -1
    todayschanges              = "!f() { git whatchanged --oneline --since=yesterday | grep -v '^:'; }; f"
    show-name                  = show --name-status
    fetch-p                    = fetch -p
    rm-submodule               = "!f() { git submodule deinit $1; git rm $1; }; f"
    unstage                    = reset HEAD --
[branch]
    autosetuprebase            = always
[color]
    diff = always
    ui   = on
[merge]
    sumary = true
    tool = p4merge
[mergetool "p4merge"]
    cmd  = p4merge \
        "$PWD/$BASE" \
        "$PWD/$LOCAL" \
        "$PWD/$REMOTE" \
        "$PWD/$MERGED"
    keppBackup     = false
    trustExistCode = false
[push]
    default = upstream
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /opt/homebrew-cask/Caskroom/sourcetree/2.0.4/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[core]
