[alias]
    timeline                   = log --topo-order --date relative --pretty='%Cgreen %h %an %ai %s' --graph
    st                         = "!f() { git status --ignore-submodules --short; }; f"
    rebase-abort               = rebase --abort
    co                         = checkout
    diffc                      = diff --cached
    pushu                      = push
    merge-with-no-commit-no-ff = merge --no-commit --no-ff
    cob                        = checkout -b
    aliases                    = config --get-regexp ^alias\\.*$
    pullrb                     = pull
    diff-b                     = diff
    outfiles                   = "!f() { git diff --name-status ..$1;  }; f"
    tip                        = log --date relative --pretty='%Cgreen %h %an %ai %s' -1
    todayschanges              = "!f() { git whatchanged --oneline --since=yesterday | grep -v '^:'; }; f"
    show-name                  = show --name-status
    fetch-p                    = fetch -p
    rm-submodule               = "!f() { git submodule deinit $1; git rm $1; }; f"
    unstage                    = reset HEAD --
    wdiff                      = diff --word-diff
    push-tags                  = "!f() { git push; git push --tag; }; f"
[branch]
    autosetuprebase            = always
[color]
    diff = always
    ui   = on
[merge]
    sumary = true
    tool = p4merge
[mergetool "p4merge"]
    cmd  = p4merge \
        "$PWD/$BASE" \
        "$PWD/$LOCAL" \
        "$PWD/$REMOTE" \
        "$PWD/$MERGED"
    keppBackup     = false
    trustExistCode = false
[push]
    default = upstream
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[core]
	excludesfile = /Users/cliang1/.gitignore_global
    pager        = cat
    autocrlf     = false
    safecrlf     = false
    eol          = crlf
    filemode     = false
    ignorecase   = false
[hub]
    protocol = ssh
[credential]
    helper = osxkeychain
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[http]
	sslVerify = false
